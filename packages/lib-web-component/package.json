{
  "name": "@designgreat/lib-web-component",
  "version": "0.7.7",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/packages/lib-web-component/src/index.cjs",
  "module": "./dist/packages/lib-web-component/src/index.mjs",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/packages/lib-web-component/src/index.mjs",
      "require": "./dist/packages/lib-web-component/src/index.cjs"
    },
    "./dist/*": "./dist/*"
  },
  "scripts": {
    "clean": "rm -rf dist coverage tsconfig*.tsbuildinfo storybook-static public",
    "copy:brand": "dg-copy-brand ./public",
    "build": "pnpm run clean && tsc -p tsconfig.build.json && vite build && STORYBOOK_DISABLE_TELEMETRY=1 pnpm run storybook:build",
    "dev": "vite dev",
    "storybook": "pnpm run copy:brand && storybook dev -p 6006",
    "storybook:build": "pnpm run copy:brand && storybook build",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "lint": "pnpm exec eslint . --max-warnings 0",
    "test": "TS_NODE_PROJECT=tsconfig.jest.config.json NODE_OPTIONS=--loader=ts-node/esm JEST_SKIP_WATCHMAN=1 jest --runInBand --config jest.config.ts",
    "test:watch": "TS_NODE_PROJECT=tsconfig.jest.config.json NODE_OPTIONS=--loader=ts-node/esm JEST_SKIP_WATCHMAN=1 jest --watch --config jest.config.ts",
    "coverage": "TS_NODE_PROJECT=tsconfig.jest.config.json NODE_OPTIONS=--loader=ts-node/esm JEST_SKIP_WATCHMAN=1 jest --config jest.config.ts --coverage",
    "prepare": "if [ \"$CI\" != \"true\" ]; then pnpm run build; fi",
    "prepublishOnly": "if [ \"$CI\" != \"true\" ]; then pnpm run build; fi"
  },
  "dependencies": {
    "@designgreat/lib-design-token": "workspace:*",
    "clsx": "^2.1.0"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^8.1.0",
    "@storybook/addon-essentials": "^8.1.0",
    "@storybook/blocks": "^8.1.0",
    "@storybook/manager-api": "^8.1.0",
    "@storybook/react": "^8.1.0",
    "@storybook/theming": "^8.1.0",
    "autoprefixer": "^10.4.18",
    "identity-obj-proxy": "^3.0.0",
    "postcss": "^8.4.38",
    "prettier": "^3.3.0",
    "react": "catalog:",
    "react-dom": "catalog:",
    "react-icons": "^5",
    "storybook": "^8.1.0",
    "tailwindcss": "^3.4.3"
  }
}
