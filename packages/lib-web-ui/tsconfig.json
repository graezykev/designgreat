{
  "extends": "../../tsconfig.react.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["node", "jest"],
    "paths": {
      "@designgreat/lib-web-ui": ["./src"],
      "@designgreat/lib-web-ui/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*",
    ".storybook/**/*",
    "scripts/**/*",
    "tailwind.config.ts",
    "vite.config.ts",
    "postcss.config.ts",
    "jest.config.ts",
    "jest.setup.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist", "build"]
}
