{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@designgreat/lib-web-ui": ["./src"],
      "@designgreat/lib-web-ui/*": ["./src/*"]
    },
    "rootDir": "src",
    "outDir": "dist/types",
    "jsx": "react-jsx",
    "composite": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "stripInternal": false,
    "skipLibCheck": false
  },
  "include": ["src/**/*"],
  "exclude": ["**/__tests__/**", "**/*.test.ts", "**/*.test.tsx", "**/*.stories.tsx"]
}
