{
  "name": "@designgreat/lib-web-ui-design-token",
  "version": "0.2.0",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run clean && pnpm run build:tokens && tsc -p tsconfig.build.json && pnpm run copy:tokens",
    "build:tokens": "node ./scripts/style-dictionary/prebuild-download-fonts.js && node ./scripts/style-dictionary/build-style-dictionary.js && node ./scripts/style-dictionary/post-build-export.js",
    "watch": "pnpm run build:tokens",
    "copy:tokens": "node ./scripts/copy-tokens.mjs",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "validate": "pnpm exec tsx src/run-validation.ts",
    "lint": "pnpm exec eslint . --max-warnings 0",
    "test": "pnpm exec vitest run",
    "clean": "rm -rf dist src/generated tsconfig*.tsbuildinfo"
  },
  "dependencies": {
    "tinycolor2": "^1"
  },
  "devDependencies": {
    "@types/tinycolor2": "^1",
    "style-dictionary": "^5.1.1",
    "vitest": "^1.5.0"
  }
}
