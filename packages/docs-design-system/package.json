{
  "name": "@designgreat/docs-design-system",
  "version": "0.5.1",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "docusaurus": "docusaurus",
    "copy:fonts": "tsx ./scripts/copy-fonts.ts",
    "dev": "pnpm run copy:fonts && docusaurus start",
    "start": "pnpm run dev",
    "build": "pnpm run copy:fonts && docusaurus build",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "lint": "pnpm exec eslint . --max-warnings 0",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@designgreat/lib-web-ui": "workspace:*",
    "@designgreat/lib-web-ui-design-token": "workspace:*",
    "@docusaurus/core": "3.9.2",
    "@docusaurus/plugin-content-docs": "3.9.2",
    "@docusaurus/preset-classic": "3.9.2",
    "@docusaurus/theme-mermaid": "3.9.2",
    "@easyops-cn/docusaurus-search-local": "0.52.1",
    "@mdx-js/react": "^3.0.0",
    "clsx": "^2.0.0",
    "prism-react-renderer": "^2.3.0",
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "3.9.2",
    "@docusaurus/tsconfig": "3.9.2",
    "@docusaurus/types": "3.9.2"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "engines": {
    "node": ">=22.0"
  }
}
