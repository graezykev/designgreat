{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "node16",
    "lib": ["ES2022"],
    "types": ["node"],
    "noEmit": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "scripts/**/*",
    "infrastructure/**/*",
    "packages/**/scripts/**/*",
    "packages/**/*.config.ts",
    "packages/**/*.config.js",
    "packages/**/*.config.mjs",
    "packages/**/*.config.cjs",
    "packages/**/*.setup.ts",
    "*.config.ts",
    "*.config.js",
    "*.config.cjs",
    "*.config.mjs"
  ]
}
